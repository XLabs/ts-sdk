{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@xlabs-xyz/fork-svm",
  "version": "5.1.0",
  "author": "xLabs",
  "license": "Apache-2.0",
  "description": "Solana fork testing utility based on LiteSVM",
  "keywords": [
    "solana",
    "SVM",
    "fork",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/xlabs/ts-sdk"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "sideEffects": false,
  "types": "./dist/index.d.ts",
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/index.js",
    "default": "./dist/index.js"
  },
  "files": [
    "dist",
    "!*.test.*",
    "README.md"
  ],
  "scripts": {
    "build": "pnpm build:litesvm && tsc && mkdir -p dist/liteSvm && cp src/liteSvm/litesvm.*.node dist/liteSvm/ && cp src/liteSvm/internal.d.ts dist/liteSvm/internal.d.ts",
    "prepublishOnly": "pnpm test && pnpm build",
    "build:litesvm": "node scripts/platformBinaryExists.js || scripts/build.sh",
    "build:litesvm:force": "scripts/build.sh",
    "test": "tsx --test tests/**/*.test.ts",
    "clean": "rm -rf ./dist"
  },
  "peerDependencies": {
    "@xlabs-xyz/const-utils": "^5.1.0",
    "@xlabs-xyz/utils": "^5.1.0",
    "@xlabs-xyz/amount": "^5.1.0",
    "@xlabs-xyz/common": "^5.1.0",
    "@xlabs-xyz/svm": "^5.1.0",
    "@solana/kit": "*",
    "@solana/rpc-spec": "*",
    "@solana/rpc-spec-types": "*"
  },
  "devDependencies": {
    "@xlabs-xyz/binary-layout": "workspace:*",
    "@xlabs-xyz/const-utils": "workspace:*",
    "@xlabs-xyz/utils": "workspace:*",
    "@xlabs-xyz/amount": "workspace:*",
    "@xlabs-xyz/common": "workspace:*",
    "@xlabs-xyz/svm": "workspace:*",
    "@solana/kit": "catalog:",
    "@solana/rpc-spec": "catalog:"
  }
}
